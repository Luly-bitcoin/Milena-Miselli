@model Laboratorio.Models.Contrato

@{
    ViewData["Title"] = "Crear Contrato";
}

<h1>Crear Contrato</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdInquilino"></label>
        <input asp-for="IdInquilino" class="form-control" />
        <span asp-validation-for="IdInquilino" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdInmueble"></label>
        <input asp-for="IdInmueble" class="form-control" />
        <span asp-validation-for="IdInmueble" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdUsuario_crea"></label>
        <input asp-for="IdUsuario_crea" class="form-control" />
        <span asp-validation-for="IdUsuario_crea" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdUsuario_termina"></label>
        <input asp-for="IdUsuario_termina" class="form-control" />
        <span asp-validation-for="IdUsuario_termina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto_mensual"></label>
        <input asp-for="Monto_mensual" class="form-control" />
        <span asp-validation-for="Monto_mensual" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_inicio"></label>
        <input asp-for="Fecha_inicio" type="date" class="form-control" />
        <span asp-validation-for="Fecha_inicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_fin"></label>
        <input asp-for="Fecha_fin" type="date" class="form-control" />
        <span asp-validation-for="Fecha_fin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_fin_original"></label>
        <input asp-for="Fecha_fin_original" type="date" class="form-control" />
        <span asp-validation-for="Fecha_fin_original" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_termina_anticipada"></label>
        <input asp-for="Fecha_termina_anticipada" type="date" class="form-control" />
        <span asp-validation-for="Fecha_termina_anticipada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Multa"></label>
        <input asp-for="Multa" class="form-control" />
        <span asp-validation-for="Multa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
