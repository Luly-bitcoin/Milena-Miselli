@model IEnumerable<Laboratorio.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h1>Contratos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear nuevo contrato</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Monto mensual</th>
            <th>Fecha inicio</th>
            <th>Fecha fin</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.IdContratos</td>
            <td>@item.IdInquilino</td>
            <td>@item.IdInmueble</td>
            <td>@item.Monto_mensual.ToString("C")</td>
            <td>@item.Fecha_inicio.ToShortDateString()</td>
            <td>@item.Fecha_fin.ToShortDateString()</td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.IdContratos" class="btn btn-sm btn-outline-info">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdContratos" class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdContratos" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
