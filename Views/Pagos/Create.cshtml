@model Laboratorio.Models.Pagos

@{
    ViewData["Title"] = "Crear Pago";
    var contrato = ViewBag.Contrato as Laboratorio.Models.Contrato;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-plus"></i> Crear Nuevo Pago
                    </h3>
                </div>
                <div class="card-body">
                    @if (contrato != null)
                    {
                        <div class="alert alert-info mb-4">
                            <h5><i class="fas fa-file-contract"></i> Información del Contrato</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Inquilino:</strong> @contrato.Inquilino?.Nombre @contrato.Inquilino?.Apellido</p>
                                    <p><strong>Inmueble:</strong> @contrato.Inmueble?.Direccion</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Monto Mensual:</strong> $@contrato.Monto_mensual.ToString("N2")</p>
                                    <p><strong>Período:</strong> @contrato.Fecha_inicio.ToString("dd/MM/yyyy") - @contrato.Fecha_fin.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <form asp-action="Create" method="post">
                        <input asp-for="IdContrato" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Numero_pago" class="form-label">Número de Pago</label>
                                    <input asp-for="Numero_pago" class="form-control" readonly />
                                    <span asp-validation-for="Numero_pago" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Fecha_pago" class="form-label">Fecha de Pago</label>
                                    <input asp-for="Fecha_pago" class="form-control" type="date" />
                                    <span asp-validation-for="Fecha_pago" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Importe" class="form-label">Importe</label>
                                    <input asp-for="Importe" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Importe" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Concepto" class="form-label">Concepto</label>
                                    <input asp-for="Concepto" class="form-control" />
                                    <span asp-validation-for="Concepto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="PorContrato" asp-route-contratoId="@Model.IdContrato" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Crear Pago
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







