@model IEnumerable<Laboratorio.Models.Pagos>

@{
    ViewData["Title"] = "Pagos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-money-bill-wave"></i> Gestión de Pagos
                    </h3>
                    @if (ViewBag.Contrato != null)
                    {
                        <div>
                            <span class="badge bg-info">Contrato: @ViewBag.Contrato.IdContratos</span>
                            <a asp-action="Create" asp-route-contratoId="@ViewBag.Contrato.IdContratos" class="btn btn-success">
                                <i class="fas fa-plus"></i> Nuevo Pago
                            </a>
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (ViewBag.Contrato != null)
                    {
                        <div class="alert alert-info">
                            <h5><i class="fas fa-file-contract"></i> Información del Contrato</h5>
                            <p><strong>Inquilino:</strong> @ViewBag.Contrato.Inquilino?.Nombre @ViewBag.Contrato.Inquilino?.Apellido</p>
                            <p><strong>Inmueble:</strong> @ViewBag.Contrato.Inmueble?.Direccion</p>
                            <p><strong>Monto Mensual:</strong> $@ViewBag.Contrato.Monto_mensual.ToString("N2")</p>
                        </div>
                    }
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>N° Pago</th>
                                    <th>Fecha</th>
                                    <th>Importe</th>
                                    <th>Concepto</th>
                                    <th>Estado</th>
                                    <th>Creado por</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pago in Model)
                                {
                                    <tr>
                                        <td>@pago.Numero_pago</td>
                                        <td>@pago.Fecha_pago.ToString("dd/MM/yyyy")</td>
                                        <td>$@pago.Importe.ToString("N2")</td>
                                        <td>@pago.Concepto</td>
                                        <td>
                                            <span class="badge @(pago.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                                @pago.Estado
                                            </span>
                                        </td>
                                        <td>@pago.UsuarioCrea?.Email</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@pago.IdPagos" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@pago.IdPagos" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (User.IsInRole("Administrador"))
                                                {
                                                    @if (pago.Estado == "Activo")
                                                    {
                                                        <form asp-action="Anular" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@pago.IdPagos" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                    onclick="return confirm('¿Está seguro que desea anular este pago?')">
                                                                <i class="fas fa-ban"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@pago.IdPagos" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
