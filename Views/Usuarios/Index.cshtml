@model IEnumerable<Laboratorio.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Gestión de Usuarios</h3>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Nuevo Usuario
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Rol</th>
                                    <th>Estado</th>
                                    <th>Avatar</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@usuario.IdUsuarios</td>
                                        <td>@usuario.Email</td>
                                        <td>
                                            <span class="badge @(usuario.Rol == "Administrador" ? "bg-danger" : "bg-info")">
                                                @usuario.Rol
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(usuario.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                                @usuario.Estado
                                            </span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(usuario.Avatar))
                                            {
                                                <img src="@usuario.Avatar" alt="Avatar" class="rounded-circle" width="30" height="30">
                                            }
                                            else
                                            {
                                                <i class="fas fa-user-circle text-muted"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (User.IsInRole("Administrador"))
                                            {
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@usuario.IdUsuarios" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@usuario.IdUsuarios" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





