@model IEnumerable<Laboratorio.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
}

<h1>Propietarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Propietario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Dni</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPropietario">Editar</a> |
                <a asp-action="Eliminar" asp-route-id="@item.IdPropietario">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>