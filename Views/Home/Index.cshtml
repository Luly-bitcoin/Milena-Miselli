@{
    ViewData["Title"] = "Inicio";
}

<!-- HERO CON IMAGEN -->
<div class="p-5 mb-4 bg-light rounded-3 position-relative" style="background-image: url('/images/fondo.jpg'); background-size: cover; background-position: center; color: white;">
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.6);"></div>
    <div class="container py-5 text-center position-relative">
        <h1 class="display-4 fw-bold">Bienvenido a Inmobiliaria Premium</h1>
        <p class="fs-5 mb-4">Gestioná inmuebles, contratos y pagos con eficiencia y estilo.</p>
        <a href="@Url.Action("Index", "Inmuebles")" class="btn btn-warning btn-lg">
            <i class="bi bi-house-fill"></i> Ver Inmuebles
        </a>
    </div>
</div>

<!-- SECCIÓN DE BENEFICIOS -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <i class="bi bi-person-check display-4 text-primary"></i>
            <h4 class="mt-3">Control Total</h4>
            <p>Gestioná contratos, pagos y propiedades desde un solo lugar.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-speedometer2 display-4 text-success"></i>
            <h4 class="mt-3">Rápido y Eficiente</h4>
            <p>Interfaz ágil y moderna para ahorrar tiempo en tus operaciones.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-shield-lock display-4 text-danger"></i>
            <h4 class="mt-3">Seguridad</h4>
            <p>Acceso con roles y permisos para mantener todo seguro y controlado.</p>
        </div>
    </div>
</div>

<!-- TARJETAS DE ACCESO RÁPIDO -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-building display-3 text-info mb-3"></i>
                    <h5 class="card-title">Inmuebles</h5>
                    <p class="card-text">Ver, crear y editar propiedades disponibles en la inmobiliaria.</p>
                    <a href="@Url.Action("Index", "Inmuebles")" class="btn btn-outline-info">Gestionar Inmuebles</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text display-3 text-warning mb-3"></i>
                    <h5 class="card-title">Contratos</h5>
                    <p class="card-text">Listá y administrá los contratos activos, vencidos o por renovar.</p>
                    <a href="@Url.Action("Index", "Contratos")" class="btn btn-outline-warning">Ver Contratos</a>
                </div>
            </div>
        </div>
    </div>
</div>

