@model Laboratorio.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-building"></i> Editar Inmueble
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdInmuebles" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IdPropietario" class="form-label">Propietario</label>
                                    <select asp-for="IdPropietario" class="form-select" asp-items="ViewBag.Propietarios">
                                        <option value="">Seleccionar Propietario</option>
                                    </select>
                                    <span asp-validation-for="IdPropietario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Tipo" class="form-label">Tipo de Inmueble</label>
                                    <select asp-for="Tipo" class="form-select" asp-items="ViewBag.TiposInmueble">
                                        <option value="">Seleccionar Tipo</option>
                                    </select>
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Uso" class="form-label">Uso</label>
                                    <select asp-for="Uso" class="form-select">
                                        <option value="">Seleccionar Uso</option>
                                        <option value="Alquiler">Alquiler</option>
                                        <option value="Venta">Venta</option>
                                        <option value="Alquiler y Venta">Alquiler y Venta</option>
                                    </select>
                                    <span asp-validation-for="Uso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Ambientes" class="form-label">Ambientes</label>
                                    <input asp-for="Ambientes" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label">Direcci√≥n</label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Coordenadas" class="form-label">Coordenadas (Opcional)</label>
                                    <input asp-for="Coordenadas" class="form-control" placeholder="Ej: 40.7128,-74.0060" />
                                    <span asp-validation-for="Coordenadas" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label">Precio</label>
                                    <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label">Estado</label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Disponible">Disponible</option>
                                <option value="Alquilado">Alquilado</option>
                                <option value="Vendido">Vendido</option>
                                <option value="Mantenimiento">Mantenimiento</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
