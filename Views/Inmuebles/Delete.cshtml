@model Laboratorio.Models.Inmueble

@{
    ViewData["Title"] = "Eliminar Inmueble";
}

<h1>Eliminar Inmueble</h1>

<h3>¿Estás seguro que deseas eliminar este inmueble?</h3>

<div>
    <h4>@Model.Direccion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Uso</dt>
        <dd class="col-sm-10">@Model.Uso</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>

        <dt class="col-sm-2">Ambientes</dt>
        <dd class="col-sm-10">@Model.Ambientes</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IdInmuebles" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
