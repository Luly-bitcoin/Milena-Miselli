@model IEnumerable<Laboratorio.Models.Inmueble>
@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<h1 class="mb-4">Inmuebles</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Inmueble
    </a>
</p>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th><i class="bi bi-geo-alt-fill"></i> Direcci√≥n</th>
            <th><i class="bi bi-tag-fill"></i> Uso</th>
            <th><i class="bi bi-house-fill"></i> Tipo</th>
            <th><i class="bi bi-grid-fill"></i> Ambientes</th>
            <th><i class="bi bi-currency-dollar"></i> Precio</th>
            <th><i class="bi bi-check-circle-fill"></i> Estado</th>
            <th><i class="bi bi-gear-fill"></i> Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Direccion</td>
                <td>@item.Uso</td>
                <td>@item.Tipo</td>
                <td>@item.Ambientes</td>
                <td>$@item.Precio</td>
                <td>
                    <span class="badge bg-@(item.Estado == "Disponible" ? "success" : "secondary")">
                        @item.Estado
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdInmuebles" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdInmuebles" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdInmuebles" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
