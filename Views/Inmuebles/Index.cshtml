@model IEnumerable<Laboratorio.Models.Inmueble>
@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-building"></i> Gestión de Inmuebles
                    </h3>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nuevo Inmueble
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Dirección</th>
                                    <th>Propietario</th>
                                    <th>Uso</th>
                                    <th>Tipo</th>
                                    <th>Ambientes</th>
                                    <th>Precio</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Direccion</td>
                                        <td>@item.Propietario?.Nombre @item.Propietario?.Apellido</td>
                                        <td>@item.Uso</td>
                                        <td>@item.TipoInmueble?.Descripcion</td>
                                        <td>@item.Ambientes</td>
                                        <td>$@item.Precio.ToString("N2")</td>
                                        <td>
                                            <span class="badge @(item.Estado == "Disponible" ? "bg-success" : "bg-secondary")">
                                                @item.Estado
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.IdInmuebles" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.IdInmuebles" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (User.IsInRole("Administrador"))
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.IdInmuebles" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
