@model Laboratorio.Models.Inmueble
@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<h1 class="mb-4">Detalles del Inmueble</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Direccion</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Uso</dt><dd class="col-sm-9">@Model.Uso</dd>
            <dt class="col-sm-3">Tipo</dt><dd class="col-sm-9">@Model.Tipo</dd>
            <dt class="col-sm-3">Ambientes</dt><dd class="col-sm-9">@Model.Ambientes</dd>
            <dt class="col-sm-3">Coordenadas</dt><dd class="col-sm-9">@Model.Coordenadas</dd>
            <dt class="col-sm-3">Precio</dt><dd class="col-sm-9">$@Model.Precio</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Estado == "Disponible" ? "success" : "secondary")">
                    @Model.Estado
                </span>
            </dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.IdInmuebles" class="btn btn-warning me-2">
                <i class="bi bi-pencil-fill"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>
</div>
